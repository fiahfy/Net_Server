<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">
  <name>Net_Server</name>
  <summary>Generic server class</summary>
  <description>Generic server class based on ext/sockets, used to develop any kind of server.</description>
  <maintainers>
    <maintainer>
      <user>schst</user>
      <name>Stephan Schmidt</name>
      <email>schst@php-tools.net</email>
      <role>lead</role>
    </maintainer>
    <maintainer>
      <user>lucamariano</user>
      <name>Luca Mariano</name>
      <email>luca.mariano@email.it</email>
      <role>lead</role>
    </maintainer>
    <maintainer>
      <user>cweiske</user>
      <name>Christian Weiske</name>
      <email>cweiske@php.net</email>
      <role>lead</role>
    </maintainer>
  </maintainers>
  <release>
    <version>1.0.1</version>
    <date>2006-06-27</date>
    <license>PHP License</license>
    <state>stable</state>
    <notes>
     - Fixing bug #8006: readEndCharacter size wasn't taken into account
       and stopped HTTP_Server functioning
    </notes>
    <deps>
      <dep type="php" rel="ge" version="4.2.0" optional="no"/>
      <dep type="pkg" rel="has" optional="no">PEAR</dep>
      <dep type="ext" rel="has" optional="no">sockets</dep>
      <dep type="ext" rel="has" optional="yes">pcntl</dep>
      <dep type="pkg" rel="has" optional="yes">PHP_Fork</dep>
    </deps>
    <filelist>
      <dir baseinstalldir="Net" name="/">
       <dir name="docs">
        <file role="doc" name="todo.txt"/>
       </dir> <!-- docs -->
       <dir name="examples">
        <file role="doc" name="talkback.php"/>
       </dir> <!-- examples -->
       <dir name="Server">
        <file role="php" name="Driver.php"/>
        <file role="php" name="Handler.php"/>
        <dir name="Driver">
         <file role="php" name="Fork.php"/>
         <file role="php" name="Multiprocess.php"/>
         <file role="php" name="Sequential.php"/>
         <dir name="Multiprocess">
          <file role="php" name="MPM-prefork.php"/>
          <file role="php" name="Processor.php"/>
          <file role="php" name="remoteConsole.php"/>
         </dir> <!-- Server/Driver/Multiprocess -->
        </dir> <!-- Server/Driver -->
       </dir> <!-- Server -->
       <file role="php" name="Server.php"/>
      </dir> <!-- / -->
    </filelist>
  </release>
