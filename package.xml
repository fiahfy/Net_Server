<?xml version="1.0" encoding="ISO-8859-1" ?>
<package version="1.0">
  <name>Net_Server</name>
  <summary>Generic server class.</summary>
  <description>Generic server class based on ext/sockets, used to develop any kind of server.</description>
  <maintainers>
    <maintainer>
      <user>schst</user>
      <name>Stephan Schmidt</name>
      <email>schst@php-tools.net</email>
      <role>lead</role>
    </maintainer>
  </maintainers>
  <release>
    <version>0.10</version>
    <date>2003-10-31</date>
    <license>PHP</license>
    <state>alpha</state>
    <notes>
		BC breakage release:
		Net_Server is now working with drivers
		and callback handlers inseatd of extending
		a base class
		Driver based on pcntl is now included that
		forks new processes.
    </notes>
    <deps>
      <dep type="php" rel="ge" version="4.2"/>
    </deps>
    <filelist>
      <file role="php" baseinstalldir="Net" name="Server.php"/>
      <file role="php" baseinstalldir="Net" name="Server/Handler.php"/>
      <file role="php" baseinstalldir="Net" name="Server/Drivers/Fork.php"/>
      <file role="php" baseinstalldir="Net" name="Server/Drivers/Sequential.php"/>
      <file role="doc" baseinstalldir="examples" name="examples/talkback.php"/>
    </filelist>
  </release>
  <changelog>
    <release>
        <version>0.9</version>
        <date>2002-07-21</date>
        <state>beta</state>
        <notes>pearified version of patServer v1.0.1</notes>
    </release>
  </changelog>
</package>